<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lottery.HelperView.SessionPopup"
             xmlns:popup="clr-namespace:Mopups.Pages;assembly=Mopups"
             xmlns:viewmodel="clr-namespace:Lottery.ViewModel"
             x:DataType="viewmodel:SessionPopuViewModel"
             Title="SessionPopup" 
             BackgroundColor="#80000000"
             CloseWhenBackgroundIsClicked="False">
    <VerticalStackLayout WidthRequest="100" HeightRequest="100" VerticalOptions="CenterAndExpand" BackgroundColor="Red">
        <Label Text="Your session has nearly expired, do you want to renew it?"/>
        <Button Text="Yes" Command="{Binding YesCommand}"/>
        <Button Text="No" Command="{Binding NoCommand}"/>
    </VerticalStackLayout>
</popup:PopupPage>