<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lottery.MainPage"
             xmlns:viewmodel="clr-namespace:Lottery.ViewModel"
             x:DataType="viewmodel:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Hello and welcome! Please write down your name under!"/>
            <Entry Text="{Binding TempName}"/>
            <Button Text="Submit" Command="{Binding welcomeMessageCommand}"/>
            <HorizontalStackLayout>
                <CheckBox IsChecked="{Binding Visible}"/>
                <Label Text="Visbility"/>
            </HorizontalStackLayout>
            <Label IsVisible="{Binding Visible}" Text="{Binding Name}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
